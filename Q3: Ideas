attempt #2:

def rolling_the_dice():

    from random import randint

    dice_1 = randint(1, 6)
    dice_2 = randint(1, 6)
    user_roll = dice_1 + dice_2

    print(f"Dice 1 = {dice_1}")
    print(f"Dice 2 = {dice_2}")
    print(f"Good roll! You rolled {user_roll}!")
    print()

    return user_roll

user_guess = input("above or below? > ").lower()
print()

user_roll = rolling_the_dice()

def play_dice(user_guess, user_roll):

    print(
        "For the last challenge, you must roll two dice and guess whether the sum of both dice will be 7 and above or below 7."
    )
    print()

    while True:
        if user_guess == "above":
            if user_roll => 7:
                print("Congrats! You win!")
            else:
                print("Wrong! You lose!")
            break
        elif user_guess == "below":
            if user_roll < 7:
                print("congrats! You win!")
            else:
                print("wrong! you lose!")
            break
        else:
            input("You must choose either Above or Below!")

play_dice(user_guess, user_roll)

attempt #3:

def rolling_the_dice():

    from random import randint

    dice_1 = randint(1, 6)
    dice_2 = randint(1, 6)
    user_roll = dice_1 + dice_2

    print(f"Dice 1 = {dice_1}")
    print(f"Dice 2 = {dice_2}")
    print(f"Good roll! You rolled {user_roll}!")
    print()

    return user_roll


def play_dice():

    print(
        "For the last challenge, you must roll two dice and guess whether the sum of both dice will be 7 and above or below 7."
    )
    print()

    user_guess = input("above or below? > ").lower()
    print()
    user_roll = rolling_the_dice()

    while True:
        if user_guess == "above":
            if user_roll >= 7:
                print("Congrats! You win!")
            else:
                print("Wrong! You lose!")
            break
        elif user_guess == "below":
            if user_roll < 7:
                print("congrats! You win!")
            else:
                print("wrong! you lose!")
            break
        else:
            input("You must choose either Above or Below!")

play_dice()