while True: 
    print("Choose A, B, C, or D")
    user_answer = input("> ")
    user_answer = user_answer.lower()

    if user_answer == "c":
        print("Correct! You may move on to the final question!")
        print()
        break
        
    elif user_answer == "A" or "B" or "D":
        print("Wrong choice! Try again.")
        print()
